{
  "name": "100hunters",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "tsx watch --ignore ./vite.config.ts.*.mjs --env-file=.env ./server.ts",
    "lint": "eslint  --cache --fix \"./**/*.{js,jsx,ts,tsx,mjs,cjs}\"",
    "lint:ci": "eslint  --cache \"./**/*.{js,jsx,ts,tsx,mjs,cjs}\"",
    "start": "cross-env NODE_ENV=production tsx ./server.ts",
    "typecheck": "tsc",
    "format": "prettier --write \"./**/*.{js,jsx,ts,tsx,mjs,cjs}\"",
    "format:ci": "prettier --check \"./**/*.{js,jsx,ts,tsx,mjs,cjs}\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "db:gen-schema": "sh ./utils/mermaid/generate-schema.sh",
    "prepare": "husky"
  },
  "dependencies": {
    "@remix-run/express": "^2.8.0",
    "@remix-run/node": "^2.8.0",
    "@remix-run/react": "^2.8.0",
    "clsx": "^2.1.0",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "invariant": "^2.2.4",
    "isbot": "^4.1.0",
    "morgan": "^1.10.0",
    "mysql2": "^3.9.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.1.0",
    "@commitlint/config-conventional": "^19.1.0",
    "@commitlint/types": "^19.0.3",
    "@mermaid-js/mermaid-cli": "^10.8.0",
    "@remix-run/dev": "^2.8.0",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.0.0",
    "@storybook/addon-links": "^8.0.0",
    "@storybook/blocks": "^8.0.0",
    "@storybook/react": "^8.0.0",
    "@storybook/react-vite": "^8.0.0",
    "@storybook/test": "^8.0.0",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.20",
    "@types/invariant": "^2.2.37",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "cross-env": "^7.0.3",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.8.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "rollup": "^4.13.0",
    "storybook": "^8.0.0",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.1",
    "typescript": "^5.4.0",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "lint-staged":
  { 
    "**/*.{js,jsx,ts,tsx}": [ 
      "npx prettier --write", 
      "npx eslint --fix"
    ] 
  },
  "overrides": {
    "vite": {
      "rollup": "npm:@rollup/wasm-node"
    }
  }
}
